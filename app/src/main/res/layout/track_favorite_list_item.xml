<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/track_item_container"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/card_view_track_height"
    app:cardUseCompatPadding="true"
    android:foreground="?android:attr/selectableItemBackground">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="3"
        android:padding="@dimen/track_item_layout_padding"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="1">
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/distance"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.7"
                android:textColor="@color/color_track_item_distance"
                android:textSize="@dimen/track_item_distance_text"/>
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/track_date"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.3"
                android:gravity="center_vertical"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:weightSum="1">
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/track_time_text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:text="@string/run_time"
                android:layout_weight="0.5"/>
            <TextView
                android:id="@+id/track_time"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center_horizontal|top"
                android:textColor="@color/color_track_item_distance"
                android:layout_weight="0.5"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="1"
            android:gravity="center">
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/start_time_text"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="@string/start_time"/>
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/start_time"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:gravity="center_horizontal|top"
                android:textColor="@color/color_track_item_distance"/>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
